<h1>Ticket 一覧</h1>

<table class="table table-striped table-hover table-condenced">
<thead>
  <tr><th>タイトル</th></tr>
</thead>
<tbody>
<% @tickets.each do |ticket| %>
  <tr>
    <td><%= link_to ticket.title, ticket_path(ticket) %></td>
    <td><%= link_to "Edit", edit_ticket_path(ticket) %></td>
    <td><%= link_to "Delete", ticket, :confirm => "『" + ticket.title + "』を削除します。よろしいですか？",
                                      :method => :delete %>
  </tr>
<% end %>
</tbody>
</table>

<p>
<%= link_to(new_ticket_path, :class => "btn btn-primary") do %>
<i class="icon-white icon-plus"></i> Create New
<% end %>
</p>

